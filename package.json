{
    "name": "rest-api-starter-kit",
    "version": "1.0.0",
    "description": "Rest API boilerplate using Koa2 and ES2017",
    "author": "Pranav Prakash <pranav@pranavprakash.net>",
    "main": "dist/index.js",
    "engines": {
      "node": "~8.5.0",
      "npm": ">=5.3.0"
    },
    "scripts": {
      "prestart": "npm run -s build",
      "start": "node dist/index.js",
      "dev": "nodemon src/index.js --exec \"node -r dotenv/config -r babel-register\"",
      "clean": "rimraf dist",
      "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
      "test": "jest",
      "prettier": "prettier --list-different '{src,test}/**/*{js,ts}'"
    },
    "keywords": [
      "koa2",
      "babel",
      "es6",
      "es2015",
      "es2016",
      "es2017",
      "jest"
    ],
    "license": "MIT",
    "dependencies": {
      "@babel/cli": "^7.1.0",
      "@babel/core": "^7.1.0",
      "@babel/register": "^7.0.0",
      "@koa/cors": "2",
      "babel-plugin-transform-object-rest-spread": "^6.26.0",
      "koa": "^2.3.0",
      "koa-bodyparser": "^4.2.0",
      "koa-morgan": "^1.0.1",
      "koa-router": "^7.2.1",
      "rimraf": "^2.6.2"
    },
    "devDependencies": {
      "@babel/plugin-transform-typescript": "^7.1.0",
      "@babel/preset-env": "^7.1.0",
      "babel-jest": "^21.0.2",
      "dotenv": "^4.0.0",
      "jest": "^21.1.0",
      "nodemon": "^1.12.1",
      "prettier": "1.14.3",
      "supertest": "^3.0.0"
    },
    "babel": {
      "presets": [
        [
          "env",
          "@babel/preset-typescript",
          {
            "targets": {
              "node": "current"
            }
          }
        ]
      ],
      "plugins": [
        "transform-object-rest-spread"
      ],
      "sourceMaps": true,
      "retainLines": true
    },
    "jest": {
      "testEnvironment": "node"
    },
    "directories": {
      "test": "test"
    },
    "repository": {
      "type": "git",
      "url": "git+https://github.com/murcul/starter-rest-api.git"
    },
    "bugs": {
      "url": "https://github.com/murcul/starter-rest-api/issues"
    },
    "homepage": "https://github.com/murcul/starter-rest-api#readme"
  }
